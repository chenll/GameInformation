<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.game.mcw.gameinformation.UserInfoActivity" />

        <variable
            name="user"
            type="com.game.mcw.gameinformation.modle.UserBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/toolbar_home" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_decoration" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:stretchColumns="1">

            <TableRow
                android:gravity="center_vertical"
                android:onClick="@{activity::onHeadItemClick}">

                <TextView
                    style="@style/userinfo_item"
                    android:text="头像" />

                <FrameLayout>

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="right|center_vertical"
                        android:scaleType="fitXY"
                        app:imageUrl='@{user.avatar??""}' />
                </FrameLayout>


                <ImageView android:src="@android:drawable/arrow_down_float" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_decoration" />

            <TableRow
                android:gravity="center_vertical"
                android:onClick="@{activity::onUUIDItemClick}">

                <TextView
                    style="@style/userinfo_item"
                    android:text="UUID" />

                <TextView
                    android:layout_gravity="right|center_vertical"
                    android:text='@{user.userId+""}' />

                <ImageView android:src="@android:drawable/arrow_down_float" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_decoration" />

            <TableRow
                android:gravity="center_vertical"
                android:onClick="@{activity::onNiceNameItemClick}">

                <TextView
                    style="@style/userinfo_item"
                    android:text="呢称" />

                <TextView
                    android:layout_gravity="right|center_vertical"
                    android:text='@{user.nickname??"_"}' />

                <ImageView android:src="@android:drawable/arrow_down_float" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_decoration" />

            <TableRow
                android:gravity="center_vertical"
                android:onClick="@{activity::onSexItemClick}">

                <TextView
                    style="@style/userinfo_item"
                    android:text="性别" />

                <TextView android:layout_gravity="right|center_vertical" />

                <ImageView android:src="@android:drawable/arrow_down_float" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_decoration" />

            <TableRow
                android:gravity="center_vertical"
                android:onClick="@{activity::onAgreementItemClick}">

                <TextView
                    style="@style/userinfo_item"
                    android:text="用户协议" />

                <TextView android:layout_gravity="right" />

                <ImageView android:src="@android:drawable/arrow_down_float" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_decoration" />

            <TableRow
                android:gravity="center_vertical"
                android:onClick="@{activity::onLogOutItemClick}">

                <TextView
                    style="@style/userinfo_item"
                    android:text="退出登录" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</layout>
